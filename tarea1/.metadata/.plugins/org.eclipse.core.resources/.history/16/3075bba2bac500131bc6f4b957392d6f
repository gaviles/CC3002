package tarea.tests;

import static org.junit.Assert.*;

import org.junit.Test;

import tarea.DataProcessor;

public class DataProcessorTest {
	
	// Test the basic functions minimum, maximum and gap
	@Test
	public void test() {
		
		DataProcessor dataProcessor = new DataProcessor("1,2,3,4,20,19,17"); 
		
		assertTrue( dataProcessor.getGap() == 19  );
		assertTrue( dataProcessor.getMaximum() == 20 );
		assertTrue( dataProcessor.getMinimum() == 1 );
	}
	
	// Test the interval detector function
	@Test
	public void test2(){
		DataProcessor dataProcessor = new DataProcessor("1,2,3,4,5,6,7,8,9");
		
		
		System.out.println(dataProcessor.getInterval(1,8));
		//System.out.println(dataProcessor.getInterval(2,8));
		//System.out.println(dataProcessor.getInterval(3,8));
		//System.out.println(dataProcessor.getInterval(4,8));
		//System.out.println(dataProcessor.getInterval(5,8));
		//System.out.println(dataProcessor.getInterval(6,8));
		//System.out.println(dataProcessor.getInterval(7,8));
		//System.out.println(dataProcessor.getInterval(8,8));
		//System.out.println(dataProcessor.getInterval(9,8));
		
		assertTrue( dataProcessor.getInterval(1, 8 ) == 0 );
		assertTrue( dataProcessor.getInterval(5, 8 ) == 4 );
		
		assertTrue( dataProcessor.getInterval(6, 8 ) == 4 );
		assertTrue( dataProcessor.getInterval(9, 8 ) == 8 );
	}
}
